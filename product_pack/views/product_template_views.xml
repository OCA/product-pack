<odoo>
    <!-- Generic Product Template view modification -->
    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.pack.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <div name="options" position="inside">
                <div groups="product_pack.group_product_pack_user">
                    <field name="pack_ok" />
                    <label for="pack_ok" />
                </div>
            </div>
            <notebook position="inside">
                <page
                    name="page_pack"
                    string="Pack"
                    attrs="{'invisible': [('pack_ok', '=', False)]}"
                    groups="product_pack.group_product_pack_user"
                >
                    <group name="group_pack">
                        <group colspan="4" col="4">
                            <field
                                name="pack_type"
                                attrs="{'required':[('pack_ok','=',True)]}"
                            />
                            <field
                                name="pack_component_price"
                                attrs="{'required':[('pack_type', '=', 'detailed')], 'invisible':[('pack_type', '!=', 'detailed')]}"
                            />
                            <field
                                name="pack_modifiable"
                                attrs="{'invisible':['|', ('pack_type', '!=', 'detailed'), ('pack_component_price', '!=', 'detailed')]}"
                            />
                        </group>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
    <!-- Product Template view modification -->
    <record model="ir.ui.view" id="product_template_only_form_view">
        <field name="name">product.template.pack.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <page name="page_pack" position="attributes">
                <attribute
                    name="attrs"
                >{'invisible': ['|', ('product_variant_count', '>', 1), ('pack_ok', '=', False)]}</attribute>
            </page>
            <group name="group_pack">
                <group string="Pack Products" colspan="4">
                    <field name="id" invisible="1" />
                    <p
                        attrs="{'invisible': [('id', '!=', False)]}"
                    >You must save first to add pack lines</p>
                    <group colspan="4">
                        <field
                            name="pack_line_ids"
                            nolabel="1"
                            attrs="{'readonly': [('id', '=', False)]}"
                        />
                    </group>
                </group>
            </group>
        </field>
    </record>
    <!-- Actions -->
    <record model="ir.actions.act_window" id="action_product_pack">
        <field name="name">Product Packs</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">kanban,form,tree</field>
        <field name="domain">[('pack_ok', '=', True)]</field>
        <field name="context">{'default_pack_ok': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
              Create a new product pack
            </p>
        </field>
    </record>
    <!-- Menus -->
    <record model="ir.ui.menu" id="menu_product_pack">
        <field name="name">Product Packs</field>
        <field name="action" ref="action_product_pack" />
        <field name="parent_id" ref="product_pack.menu_product_pack_root" />
    </record>
</odoo>
