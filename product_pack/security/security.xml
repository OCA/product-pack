<odoo>
    <record model="ir.module.category" id="module_category_product_pack">
        <field name="name">Product Packs</field>
        <field name="description">Helps you handle your product packs.</field>
        <field name="sequence">8</field>
    </record>
    <!-- Groups -->
    <record id="group_product_pack_user" model="res.groups">
        <field name="name">Product Pack User</field>
        <field name="comment">Allow to read Product Packs</field>
        <field name="category_id" ref="product_pack.module_category_product_pack" />
    </record>

    <record id="group_product_pack_manager" model="res.groups">
        <field name="name">Product Pack Manager</field>
        <field name="comment">Allow to manage Product Packs</field>
        <field name="category_id" ref="product_pack.module_category_product_pack" />
        <field
            name="implied_ids"
            eval="[(4, ref('product_pack.group_product_pack_user'))]"
        />
    </record>
</odoo>
