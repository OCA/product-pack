<odoo>

    <record model="ir.ui.view" id="sale_product_pack_line_modification_form_view">
        <field
            name="name"
        >sale.product.pack.line.modification.form (in sale_product_pack_line_modification)</field>
        <field name="model">sale.product.pack.line.modification</field>
        <field name="arch" type="xml">
            <form string="Sale Product Pack Modification">
                <div class="oe_grey">
                    <span>Choose the product you want to substitute by</span>
                </div>
                <group>
                    <field name="product_id" />
                </group>
                <group>
                    <field name="sale_order_line_ids" readonly="1" />
                </group>
                <footer>
                    <button name="doit" string="OK" class="btn-primary" type="object" />
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record
        model="ir.actions.act_window"
        id="sale_product_pack_line_modification_act_window"
    >
        <field name="name">Sale Product Pack Line Modification</field>
        <field name="res_model">sale.product.pack.line.modification</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>
</odoo>
